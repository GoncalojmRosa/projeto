generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crosswalk {
  id        String      @id @default(cuid()) 
  state     State       @default(SEM_DESGASTE)
  latitude  Float
  longitude Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}


enum State {
  SEM_DESGASTE
  DESGASTE_SEVERO
  DESGASTE_MODERADO
}